{
  "name": "gajevids-schema",
  "displayName": "Gajevids Schema",
  "description": "Provides YAML schema validation and autocompletion for yml files.",
  "version": "0.3.3",
  "publisher": "gajeroll",
  "license": "MIT",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/gajeroll/gajevids-schema"
  },
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Formatters",
    "Linters",
    "Programming Languages",
    "Snippets"
  ],
  "extensionDependencies": [
    "redhat.vscode-yaml"
  ],
  "contributes": {
    "yamlValidation": [
      {
        "fileMatch": [
          "gajevids.yml",
          "gajevids.yaml",
          "*gajevids*.yml",
          "*gajevids*.yaml"
        ],
        "url": "./gajevids.schema.json"
      },
      {
        "fileMatch": [
          "gaje-vids-v0.yml",
          "gaje-vids-v0.yaml"
        ],
        "url": "./schemas/gajevids-v0.schema.json"
      },
      {
        "fileMatch": [
          "gaje-vids-v1.yml",
          "gaje-vids-v1.yaml"
        ],
        "url": "./schemas/gajevids-v1.schema.json"
      }
    ]
  }
}
